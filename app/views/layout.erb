<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/style.css'>
    <title>Chitter</title>
  </head>

  <body>
    <div class='nav'>
        <div id='banner'>
          c h i t t e r
        </div>
        <div id='user'>
          <%= partial :welcome %>
        </div>
        <div id='goodbye'>
          <%= flash[:goodbye] %>
        </div>
        <% if current_user %>
          <div class='buttons'>
            <form action='/sessions' method='post'>
                <div><input id='button' type='submit' value='log out'></div>
                <input type='hidden' name='_method' value='delete'>
            </form>
          </div>
        <% else %>
          <div class='buttons'>
            <form action='/sessions/new' method='get'>
                <div><input id='button' type='submit' value='log in'></div>
            </form>
            <form action='/users/new' method='get'>
              <div><input id='button' type='submit' value='sign up'></div>
            </form>
          </div>
        <% end %>
    </div>
    <div id='main-content'>
      <div id='log_in'><%= flash[:log_in] %></div>
      <%= partial :errors %>
      <%= yield %>
    </div>
  </body>

</html>
