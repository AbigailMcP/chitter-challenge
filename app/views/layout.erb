<!DOCTYPE html>
<html>
  <head>
    <title>Chitter</title>
  </head>

  <body>
    <% if current_user %>
      Welcome, <%= current_user.name.capitalize %>!
    <% end %>

    <%= yield %>

    <% if flash[:errors] %>
      <ul id='errors'>
          <% flash[:errors].each do |error| %>
            <li><%= error %></li>
        <% end %>
      </ul>
    <% end %>
    
    <%= flash[:failed_login] %>

  </body>
</html>
